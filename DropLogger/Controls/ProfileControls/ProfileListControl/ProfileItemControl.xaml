<UserControl x:Class="DropLogger.ProfileItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:DropLogger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Button HorizontalContentAlignment="Stretch" 
            Style="{StaticResource ProfileSelectionButton}"
            Command="{Binding Source={x:Static core:ProfileViewModel.Profile}, Path=SelectProfileCommand}"
            CommandParameter="{Binding id}"
            />
</UserControl>
